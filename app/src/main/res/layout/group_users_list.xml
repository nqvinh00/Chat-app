<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/username_new_message"
        android:layout_width="261dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:text="@string/username_new_message"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_profile_new_message"
        app:layout_constraintStart_toEndOf="@+id/image_profile_new_message"
        app:layout_constraintTop_toTopOf="@+id/image_profile_new_message"
        app:layout_constraintVertical_bias="0.555" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile_new_message"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/selected_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/username_new_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/username_new_message"
        app:layout_constraintTop_toTopOf="@+id/username_new_message" />
</androidx.constraintlayout.widget.ConstraintLayout>